<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define the action -->
    <record model="ir.actions.server" id="action_check_ifcopenshell_installed"> <!-- Menu + python -->
        <field name="name">IFC Check</field>
        <field name="model_id" ref="z_ifc_reader.model_ifc_checker"/>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
        <field name="code">
            action = model.action_check_ifcopenshell_installed()
        </field>
    </record>


    <!-- Define the view -->
        <record id="view_ifc_checker_form" model="ir.ui.view">
            <field name="name">ifc.checker.form</field>
            <field name="model">ifc.checker</field>
            <field name="arch" type="xml">
                <form create="false" editable="top" delete="false" edit="false">
                    <div class="o_form_buttons">
                        <t t-call="custom.form.view.buttons"/>  <!-- Replace this with your custom template -->
                    </div>
                    <group>
                        <button name="action_check_ifcopenshell_installed"
                                string="Check if IFCOpenShell is Installed"
                                type="object"
                                class="oe_highlight"/>
                    </group>
                </form>

                <!-- <form>
                    <group>
                        <button name="action_check_ifcopenshell_installed"
                                string="Check if IFCOpenShell is Installed"
                                type="object"
                                class="oe_highlight"/>
                    </group>
                </form> -->
            </field>
        </record>


    <!-- Define the action window -->
    <record id="action_check_ifcopenshell_installed_form" model="ir.actions.act_window">
        <field name="name">IFC Checker</field>
        <field name="res_model">ifc.checker</field>
        <field name="view_mode">kanban,form</field>
        <!-- <field name="view_mode">form</field> -->
        <field name="view_id" ref="view_ifc_checker_form"/>
    </record>

    <menuitem id="menu_ifc_checker" action="action_check_ifcopenshell_installed_form" parent="menu_ifc_reader" sequence="0"/>



</odoo>
