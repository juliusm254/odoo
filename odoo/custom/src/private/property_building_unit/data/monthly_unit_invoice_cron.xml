<odoo>
    <data>
        <record id="monthly_unit_invoice_cron" model="ir.cron">
            <field name="name">MONTHLY RENT INVOICES CRON</field>
            <field name="model_id" ref="model_rental_unit" />
            <field
                name="interval_number"
            >1</field>  <!-- Interval number (every X units) -->
            <field
                name="interval_type"
            >days</field>  <!-- Interval type (minutes, hours, days, weeks) -->
            <field
                name="numbercall"
            >-1</field>  <!-- Number of calls (-1 for unlimited) -->
            <field
                name="doall"
                eval="False"
            />  <!-- Run on all company databases (False) -->
            <field name="active" eval="True" />  <!-- Activate the cron job (True) -->
        </record>
    </data>
</odoo>
